{
  "Version":"2012-10-17",
  "Statement":[
    {
      "Sid":"AllowAllAccountUsersReadWrite",
      "Effect":"Allow",
      "Action":[
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket",
        "s3:DeleteObject"
      ],
      "Resource":[
        "arn:aws:s3:::${STATE_BUCKET}",
        "arn:aws:s3:::${STATE_BUCKET}/*"
      ],
      "Principal":"*",
      "Condition":{
        "StringEquals":{
          "aws:PrincipalAccount":"${AWS_ACCOUNT}"
        }
      }
    }
  ]
}